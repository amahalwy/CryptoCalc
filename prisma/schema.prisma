generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id   String @id
  name String @unique
  otp  String @unique
  List List[]
}

model List {
  id        String   @id
  userId    String
  active    Boolean  @default(true)
  startDate String 
  endDate   String 
  total Float
  currentTotal Float
  percentChange Float
  coins     Coin[]
  owner     User     @relation(fields: [userId], references: [id])
}

model Coin {
  id     Int    @id @default(autoincrement())
  name   String
  listId String
  quantity Float 
  price Float
  List   List   @relation(fields: [listId], references: [id])
}