generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id   String @id
  name String
  otp  String
  List List[]
}

model List {
  id     String    @id 
  userId String
  owner  User   @relation(fields: [userId], references: [id])
  coins  Coin[]
}

model Coin {
  id     Int    @id @default(autoincrement())
  name   String
  listId String
  List   List   @relation(fields: [listId], references: [id])
}
